#!/bin/bash

# Please note:
# - The (experimental?) CMake script still has some issues.
# - You may try with other targets than CORE2. For auto-detection
#   just run make.

# recipe for:
P=OpenBLAS
V=${OPENBLAS_VERSION:-0.3.9}

FNAME="v$V.tar.gz"
DOWNLOAD_URL="http://github.com/xianyi/$P/archive/${FNAME}"
SRC_FILE="${DOWNLOADS_DIR}/$P-$V.tar.gz"

# download
test -r "${SRC_FILE}"  || curl -L --output "$_" "${DOWNLOAD_URL}" || exit ${BUILD_ERR_DOWNLOAD}

# unpack
mkdir -p "${SRC_DIR}/$P" && cd "$_" || exit ${BUILD_ERR_SYSTEM}
tar xvf "${SRC_FILE}" || exit ${BUILD_ERR_UNTAR}
cd "$P-$V" || exit ${BUILD_ERR_SYSTEM}

# configure
# nothing to configure

# compile & install
make TARGET=CORE2 || exit ${BUILD_ERR_MAKE}
make TARGET=CORE2 PREFIX="${PREFIX}" install || exit ${BUILD_ERR_INSTALL}
