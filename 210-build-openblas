#!/bin/bash
#
# OPAL Toolchain Build recipe for OpenBLAS
#
# http://www.openblas.net

# Please note:
# - The (experimental?) CMake script still has some issues.
# - You may try with other targets than CORE2. For auto-detection
#   just run make.

# recipe for:
P=OpenBLAS
V=${OPENBLAS_VERSION:-0.3.26}

trap "otb_exit" EXIT

FNAME="v$V.tar.gz"
DOWNLOAD_URL="http://github.com/xianyi/$P/archive/${FNAME}"
SRC_FILE="${OTB_DOWNLOAD_DIR}/$P-$V.tar.gz"

# download
mkdir -p "${OTB_DOWNLOAD_DIR}"
test -r "${SRC_FILE}"  || curl -L --output "$_" "${DOWNLOAD_URL}" || exit ${OTB_ERR_DOWNLOAD}

# unpack
mkdir -p "${OTB_SRC_DIR}/$P" && cd "$_" || exit ${OTB_ERR_SYSTEM}
tar xvf "${SRC_FILE}" || exit ${OTB_ERR_UNTAR}
cd "$P-$V" || exit ${OTB_ERR_SYSTEM}

# configure
OS=$(uname -s)
declare -a config_args=()
#if [[ "${OS}" == "Linux" ]]; then
#        :
#elif [[ "${OS}" == "Darwin" ]]; then
#	config_args+=( "-DCMAKE_OSX_DEPLOYMENT_TARGET=10.15" )
#fi
mkdir -p "${OTB_SRC_DIR}/$P/build" && cd "$_" || exit ${OTB_ERR_SYSTEM}
cmake \
	-DCMAKE_INSTALL_PREFIX:PATH="${OTB_PREFIX}" \
	-DDYNAMIC_ARCH=1 \
        "${config_args[@]}" \
        "${OTB_SRC_DIR}/$P/$P-$V" || exit ${OTB_ERR_CONFIGURE}

# compile & install
make || exit ${OTB_ERR_MAKE}
make install || exit ${OTB_ERR_INSTALL}

# Local Variables:
# mode: shell-script-mode
# sh-basic-offset: 8
# End:

